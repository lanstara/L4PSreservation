<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textRestaurantname"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Bistro Bliss"
        android:textColor="#F5FFC107"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textMakeRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Make A Reservation"
        android:textColor="#A6FFC107"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/textName"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/name"
        android:textColor="#090909" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#090909"
        android:ems="10"
        android:inputType="text"
        android:padding="0.dp" />

    <TextView
        android:id="@+id/textNumber"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/mobile_number"
        android:textColor="#090909" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#090909"
        android:ems="10"
        android:inputType=""
        android:padding="0.dp" />

    <TextView
        android:id="@+id/textNumPax"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/no_of_pax"
        android:textColor="#FF090909" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#090909"
        android:ems="10"
        android:inputType="number"
        android:padding="0.dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarTextColor="#FFFFFF"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:yearListSelectorColor="#F6F3F3" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:amPmTextColor="#F4F1F1"
                android:timePickerMode="spinner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/optionTbl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/smokingTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Smoking Table"
                        android:textColor="#FF090909" />

                    <RadioButton
                        android:id="@+id/normalTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Non-smoking Table"
                        android:textColor="#FF090909" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/resetButton"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#3BFF9800"
                android:text="Reset"
                android:textColor="#101010" />

            <Button
                android:id="@+id/rButton"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#3BFF9800"
                android:text="Reserve Now"
                android:textColor="#101010" />

            <TextView
                android:id="@+id/tvDisplay"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textColor="#FAF4F4" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>